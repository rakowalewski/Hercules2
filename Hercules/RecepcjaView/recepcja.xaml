<Window x:Class="Hercules.recepcja"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hercules"
        mc:Ignorable="d"
        Title="recepcja" Height="300" Width="300">
    <Grid>
        <!--Definicja wierszy i kolumn-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>


        </Grid.RowDefinitions>

        <!--Definicja elementów Menu-->
        <Button Content="Klient" Margin="8,85,0,0" Click="Button_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Width="70"/>
        <Button Content="Harmonogram" Margin="3,125,0,0" Click="Button_Click_1" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button Content="Ustawienia" Margin="3,170,0,0" Click="Button_Click_2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75"/>

        <!--Definicja Tabcontrol po prawej stronie-->
        <Grid Grid.Column="1" Grid.Row="0" Grid.RowSpan="3">
            <Frame x:Name="RecepcjaFrame" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>
